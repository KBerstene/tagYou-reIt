<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/pitch_pipe_center"
    android:layout_width="160dp"
    android:layout_height="160dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@drawable/pitch_circle_9_center"
    android:fontFamily="sans-serif"
    android:text="@string/pitch_a"
    android:textAllCaps="false"
    android:textColor="@color/darkTitle"
    android:theme="@style/AppTheme"
    android:textSize="80sp"/>

  <com.spelder.tagyourit.ui.pitch.PitchButton
    android:id="@+id/pitch_pipe_c"
    android:layout_width="55dp"
    android:layout_height="55dp"
    android:layout_above="@+id/pitch_pipe_center"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="15dp"
    android:background="@drawable/pitch_circle_12"
    android:fontFamily="sans-serif"
    android:text="@string/pitch_c"
    android:textColor="@color/darkTitle"
    android:textSize="25sp"/>

  <com.spelder.tagyourit.ui.pitch.PitchButton
    android:id="@+id/pitch_pipe_db"
    android:layout_width="55dp"
    android:layout_height="55dp"
    android:layout_above="@id/pitch_pipe_center"
    android:layout_marginStart="5dp"
    android:layout_marginBottom="-2dp"
    android:layout_toEndOf="@+id/pitch_pipe_c"
    android:background="@drawable/pitch_circle_1"
    android:fontFamily="sans-serif"
    android:text="@string/pitch_sharp_flat"
    android:textAllCaps="false"
    android:textColor="@color/darkTitle"
    android:textSize="20sp"/>

  <com.spelder.tagyourit.ui.pitch.PitchButton
    android:id="@+id/pitch_pipe_d"
    android:layout_width="55dp"
    android:layout_height="55dp"
    android:layout_above="@+id/pitch_pipe_eb"
    android:layout_marginStart="-2dp"
    android:layout_marginBottom="5dp"
    android:layout_toEndOf="@+id/pitch_pipe_center"
    android:background="@drawable/pitch_circle_2"
    android:fontFamily="sans-serif"
    android:text="@string/pitch_d"
    android:textColor="@color/darkTitle"
    android:textSize="25sp"/>

  <com.spelder.tagyourit.ui.pitch.PitchButton
    android:id="@+id/pitch_pipe_eb"
    android:layout_width="55dp"
    android:layout_height="55dp"
    android:layout_centerVertical="true"
    android:layout_marginStart="15dp"
    android:layout_toEndOf="@id/pitch_pipe_center"
    android:background="@drawable/pitch_circle_3"
    android:fontFamily="sans-serif"
    android:text="@string/pitch_sharp_flat"
    android:textAllCaps="false"
    android:textColor="@color/darkTitle"
    android:textSize="20sp"/>

  <com.spelder.tagyourit.ui.pitch.PitchButton
    android:id="@+id/pitch_pipe_e"
    android:layout_width="55dp"
    android:layout_height="55dp"
    android:layout_below="@id/pitch_pipe_eb"
    android:layout_marginStart="-2dp"
    android:layout_marginTop="5dp"
    android:layout_toEndOf="@id/pitch_pipe_center"
    android:background="@drawable/pitch_circle_4"
    android:fontFamily="sans-serif"
    android:text="@string/pitch_e"
    android:textColor="@color/darkTitle"
    android:textSize="25sp"/>

  <com.spelder.tagyourit.ui.pitch.PitchButton
    android:id="@+id/pitch_pipe_f"
    android:layout_width="55dp"
    android:layout_height="55dp"
    android:layout_below="@id/pitch_pipe_center"
